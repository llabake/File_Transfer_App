<p id="notice"><%= notice %></p>

<div>
  <h3>Files</h3>
  <ul>
    <% @document.files.each do |file| %>
      <li>
        <h5><%= file.filename.base %></h5>
        <%= link_to "Preview", rails_blob_path(file, disposition: "preview"), target: :blank %>
        <%= link_to "Download", rails_blob_path(file, disposition: "attachment") %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to 'Edit', edit_document_path(@document) %> | <%= link_to 'Back', documents_path %>
